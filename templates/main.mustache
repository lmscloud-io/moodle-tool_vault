{{!
    @template tool_vault/main

    Main page of Vault tool.

    Example context (json):
    {
        'pixpath': '/'
    }
}}

{{^isregistered}}
    {{{registrationform}}}
{{/isregistered}}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <img src="{{pixbaseurl}}/cloudup.svg" width="48" height="48">
        </div>
        <div class="col-md-10">
            <p>
                <a href="{{mainurl}}?section=backup">{{#str}} sitebackup, tool_vault {{/str}}</a><br>
                Backup your whole site to the cloud with possibility to restore it on the same or different
                server, in a different database or different file system.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            {{#allowrestore}}
                <img src="{{pixbaseurl}}/clouddown.svg" width="48" height="48">
            {{/allowrestore}}
            {{^allowrestore}}
                <img src="{{pixbaseurl}}/clouddownoff.svg" width="48" height="48">
            {{/allowrestore}}
        </div>
        <div class="col-md-10">
            <p>
                <a href="{{mainurl}}?section=restore">{{#str}} siterestore, tool_vault {{/str}}</a><br>
                Restore a site from the cloud backup that you have made yourself or somebody shared with you.<br>
                Note that the whole content of the current site will be replaced with the content of the backup.
                {{^allowrestore}}
                <br>
                Restoring on this site is not allowed. You can change it in the plugin settings.
                {{/allowrestore}}
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="{{pixbaseurl}}/history.svg" width="48" height="48">
        </div>
        <div class="col-md-10">
            <p>
                <a href="{{mainurl}}?section=logs">{{#str}} history, tool_vault {{/str}}</a><br>
                Logs of past backups and restores on this site.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="{{pixbaseurl}}/settingstune.svg" width="48" height="48">
        </div>
        <div class="col-md-10">
            <p>
                <a href="{{settingsurl}}">{{#str}} settings, moodle {{/str}}</a><br>
                Vault plugin settings where you can configure what to exclude during backup or
                preserve during restore.
            </p>
        </div>
    </div>
    {{#isregistered}}
    <div class="row">
        <div class="col-md-2">
            <img src="{{pixbaseurl}}/managecloud.svg" width="48" height="48">
        </div>
        <div class="col-md-10">
            {{{registrationform}}}
        </div>
    </div>
    {{/isregistered}}
</div>
