{{!
    @template tool_vault/check_summary

    Example context (json):
    {
        "title": "Title",
        "reschedulelink": "#",
        "summary": "Summary",
        "fullreporturl": "#",
        "showdetailslink": 1
    }

}}
<div class="card mt-2">
    <div class="card-header">
        <h5 class="mb-0">
            {{{title}}}
            {{^inprogress}}{{#reschedulelink}}<a href="{{reschedulelink}}">
                {{#pix}} i/reload, core, Check again {{/pix}}
            </a>{{/reschedulelink}}{{/inprogress}}
        </h5>
    </div>
    <div class="card-body">
        {{#subtitle}}
            <h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>
        {{/subtitle}}
        <p class="card-text">
            {{#inprogress}}
                ... Wait for cron to finish to view report ...
            {{/inprogress}}
            {{{summary}}}
        </p>
        {{#showdetailslink}}
            <a href="{{fullreporturl}}" class="card-link">See full report</a>
        {{/showdetailslink}}
    </div>
</div>
