{{!
    @template tool_vault/check_summary

    Example context (json):
    {
        "title": "Title",
        "reschedulelink": "#",
        "summary": "Summary",
        "fullreporturl": "#",
        "showdetailslink": 1
    }

}}
<div class="card mt-2">
    <div class="card-header">
        <h5 class="mb-0">
            {{{title}}}
            {{^inprogress}}{{#reschedulelink}}<a href="{{reschedulelink}}">
                {{#pix}} i/reload, core, {{#str}} checkagain, tool_vault {{/str}} {{/pix}}
            </a>{{/reschedulelink}}{{/inprogress}}
        </h5>
    </div>
    <div class="card-body">
        {{#subtitle}}
            <h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>
        {{/subtitle}}
        <div class="card-text">
            {{#inprogress}}
                {{#str}} waitforcron, tool_vault {{/str}}
            {{/inprogress}}
            {{#errormessage}}
                {{> tool_vault/error_with_backtrace }}
            {{/errormessage}}
            {{{summary}}}
        </div>
        {{#showdetailslink}}
            <p><a href="{{fullreporturl}}" class="card-link">{{#str}} seefullreport, tool_vault {{/str}}</a></p>
        {{/showdetailslink}}
    </div>
</div>
