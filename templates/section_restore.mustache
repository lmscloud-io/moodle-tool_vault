{{!
    @template tool_vault/section_restore

    Example context (json):
    {
        "lastbackup": {
            "title": "Title",
            "details": "Details"
        }
    }

}}

<h3>{{#str}}siterestore, tool_vault{{/str}}</h3>

{{{registrationform}}}

{{#isregistered}}
    <h4>Remote backups</h4>
    <p>Last updated: {{remotebackupstime}} <a href="{{remotebackupsupdateurl}}">{{#pix}} i/reload, core, Refresh {{/pix}}</a></p>

    {{#errormessage}}
        {{> tool_vault/error_with_backtrace }}
    {{/errormessage}}

    <table class="generaltable">
        <thead>
            <tr>
                <th>Backup</th>
                <th>Status</th>
                <th>Date</th>
                <th>Encrypted</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    {{#remotebackups}}
        <tr>
            <td>
                {{info.description}}<br>
                <b>Backup key:</b> <a href="{{viewurl}}">{{backupkey}}</a>
            </td>
            <td>
                {{status}}
            </td>
            <td>
                {{started}}
            </td>
            <td>
                {{#info.encrypted}}{{#str}}yes{{/str}}{{/info.encrypted}}
                {{^info.encrypted}}{{#str}}no{{/str}}{{/info.encrypted}}
            </td>
            <td>
                {{#isfinished}}
                    {{> tool_vault/remote_backup_buttons}}
                {{/isfinished}}
            </td>
        </tr>
    {{/remotebackups}}
    {{^remotebackups}}
        <tr><td colspan="5"><em>You don't have any remote backups yet</em></td></tr>
    {{/remotebackups}}
        </tbody>
    </table>
{{/isregistered}}



{{#haspastrestores}}
    <h3>Past restores on this site</h3>
    <table class="generaltable">
        <tr>
            <th>Backup</th>
            <th>Status</th>
            <th>Date</th>
            <th>Encrypted</th>
            <th></th>
        </tr>
        {{#restores}}
            <tr>
                <td>
                    {{{description}}}<br>
                    <b>Backup key:</b> <a href="{{detailsurl}}">{{backupkey}}</a>
                </td>
                <td>{{status}}</td>
                <td>{{started}}</td>
                <td>
                    {{#encrypted}}{{#str}}yes{{/str}}{{/encrypted}}
                    {{^encrypted}}{{#str}}no{{/str}}{{/encrypted}}
                </td>
                <td>
                    {{#showactions}}
                        {{> tool_vault/remote_backup_buttons}}
                    {{/showactions}}
                </td>
            </tr>
        {{/restores}}
    </table>
{{/haspastrestores}}
{{^haspastrestores}}
    <p>You don't have any past restores</p>
{{/haspastrestores}}
