{{!
    @template tool_vault/section_restore

    Example context (json):
    {
        "lastbackup": {
            "title": "Title",
            "details": "Details"
        }
    }

}}

<h3>{{#str}}siterestore, tool_vault{{/str}}</h3>

{{{registrationform}}}

{{#lastrestore}}
    <div class="card mt-2">
        <div class="card-header">
            <h5 class="mb-0">
                {{{title}}}
            </h5>
        </div>
        <div class="card-body">
            {{#subtitle}}
                <h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>
            {{/subtitle}}
            <p class="card-text">
                {{{summary}}}
            </p>
            <pre>
{{{logs}}}</pre>
            {{#showdetailslink}}
                <a href="{{fullreporturl}}" class="card-link">More details</a>
            {{/showdetailslink}}
            {{#unauthlink}}
                <a href="{{unauthlink}}" class="card-link">Monitor restore status without authentication here</a>
            {{/unauthlink}}
        </div>
    </div>
{{/lastrestore}}

{{#isregistered}}
    <h4>Remote backups</h4>
    <p>Last updated: {{remotebackupstime}} <a href="{{remotebackupsupdateurl}}">{{#pix}} i/reload, core, Refresh {{/pix}}</a></p>
    <table class="generaltable">
        <thead>
            <tr>
                <th>Backup</th>
                <th>Status</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    {{#remotebackups}}
        <tr>
            <td>
                {{info.description}}<br>
                <b>Backup key:</b> <a href="{{viewurl}}">{{backupkey}}</a>
            </td>
            <td>
                {{status}}
            </td>
            <td>
                {{started}}
            </td>
            <td>
                {{#isfinished}}
                    <a href="{{dryrunurl}}" class="btn btn-secondary">Run pre-check</a>
                    <a href="{{restoreurl}}" class="btn btn-secondary {{^restoreallowed}}disabled{{/restoreallowed}}">Restore this backup</a>
                {{/isfinished}}
            </td>
        </tr>
    {{/remotebackups}}
    {{^remotebackups}}
        <tr><td colspan="4"><em>You don't have any remote backups yet</em></td></tr>
    {{/remotebackups}}
        </tbody>
    </table>
{{/isregistered}}
