{{!
    @template tool_vault/backup_details

    Example context (json):
    {
        "sectionurl": "#",
        "title": "Title",
        "details": "Details"
    }

}}

<h4>{{{title}}}</h4>

<table class="generaltable">
    <tr>
        <th>Description</th>
        <td>{{{description}}}</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>{{{statusstr}}}</td>
    </tr>
    {{#performedby}}
        <tr>
            <th>Performed by</th>
            <td>{{{.}}}</td>
        </tr>
    {{/performedby}}
    {{#timestarted}}
        <tr>
            <th>Started on</th>
            <td>{{{.}}}</td>
        </tr>
    {{/timestarted}}
    {{#timefinished}}
        <tr>
            <th>Finished on</th>
            <td>{{{.}}}</td>
        </tr>
    {{/timefinished}}
    <tr>
        <th>Encrypted</th>
        <td>{{{encryptedstr}}}</td>
    </tr>
    {{#totalsize}}
        <tr>
            <th>Total size (archived)</th>
            <td>{{{totalsizestr}}}</td>
        </tr>
    {{/totalsize}}
    {{^isprogresspage}}
        <tr>
            <th>Logs</th>
            <td>
{{#haslogs}}
{{> tool_vault/logs_with_short}}
{{/haslogs}}
                {{^haslogs}}
                    Not available (backup was performed on a different site)
                {{/haslogs}}
            </td>
        </tr>
    {{/isprogresspage}}
</table>

{{#haslogs}}
    {{#isprogresspage}}
        <h4>Backup process log</h4>
<pre>
{{{logs}}}
</pre>
    {{/isprogresspage}}
{{/haslogs}}

{{#lastdryrun}}
    {{> tool_vault/last_operation }}
{{/lastdryrun}}

{{#restorenotallowedreason}}
    <div class="mt-2">
        {{> core/notification_error}}
    </div>
{{/restorenotallowedreason}}

<div>
    {{#showactions}}
        {{> tool_vault/remote_backup_buttons}}
    {{/showactions}}
</div>
