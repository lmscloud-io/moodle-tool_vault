{{!
    @template tool_vault/dryrun

    Example context (json):
    {
        "subtitle": "subtitle",
        "backupurl": "/",
        "backupkey": "abcdef",
        "showactions": "1"
    }
}}
<h4>Restore pre-checks</h4>
<h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>

<p>
    Backup: <a href="{{backupurl}}">{{backupkey}}</a>
</p>


{{#inprogress}}
    <p class="mt-3 mb-3">... Wait for cron to finish to view report ...</p>
{{/inprogress}}

{{#errormessage}}
    {{> tool_vault/error_with_backtrace }}
{{/errormessage}}

{{#haslogs}}
    <div class="card mt-2 mb-2">
        <div class="card-body">
            <div class="card-text">
                <pre>{{{logs}}}</pre>
            </div>
        </div>
    </div>

{{/haslogs}}

{{#prechecks}}
    {{> tool_vault/check_summary}}
{{/prechecks}}

<div>
    <a href="{{backupurl}}" class="btn btn-secondary">View backup details</a>
    {{#showactions}}
        {{> tool_vault/remote_backup_buttons}}
    {{/showactions}}
</div>
