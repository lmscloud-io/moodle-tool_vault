{{!
    @template tool_vault/start_restore_popup

    Example context (json):
    {
        "dryrun": false,
        "encrypted": true
    }

}}

<form action="#">
{{#dryrun}}
    <p>Restore pre-check will be executed on the next cron run.</p>
{{/dryrun}}
{{^dryrun}}
    <p>Restore will be executed on the next cron run. Important! All data from this site will be deleted!</p>
{{/dryrun}}
{{#encrypted}}
    <p>This backup is encrypted, you need a passphrase:</p>
    <p><label for="passphrase_startrestore_{{dryrun}}_{{backupkey}}">{{#str}} passphrase, tool_vault {{/str}}:</label>
        <input type="text" name="passphrase" id="passphrase_startrestore_{{dryrun}}_{{backupkey}}"></p>
{{/encrypted}}
</form>
