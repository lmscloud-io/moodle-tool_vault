{{!
    @template tool_vault/error_with_backtrace

    Example context (json):
    {
        "uniqueid": "errormessageasdf",
        "error": "Error",
        "backtrace": "Backtrace"
    }

}}
<div id="{{uniqueid}}" data-show-backtrace="0">
    <div class="alert alert-danger alert-block fade in ">
        {{{ error }}}
        {{#backtrace}}
            <a href="#" class="action-backtrace-show">Show backtrace</a>
            <a href="#" class="action-backtrace-hide hidden">Hide backtrace</a>
        {{/backtrace}}
    </div>
    {{#backtrace}}
        <div class="backtrace" style="display: none">
            <pre>{{{.}}}</pre>
        </div>
    {{/backtrace}}
</div>
{{#js}}
    var el = document.getElementById('{{uniqueid}}');
    el.querySelector('.action-backtrace-show').onclick = function(e) {
        e.preventDefault();
        el.querySelector('.action-backtrace-hide').classList.remove('hidden');
        el.querySelector('.action-backtrace-show').classList.add('hidden');
        el.querySelector('.backtrace').style.display = 'inherit';
    };
    el.querySelector('.action-backtrace-hide').onclick = function(e) {
        e.preventDefault();
        el.querySelector('.action-backtrace-show').classList.remove('hidden');
        el.querySelector('.action-backtrace-hide').classList.add('hidden');
        el.querySelector('.backtrace').style.display = 'none';
    };
{{/js}}
