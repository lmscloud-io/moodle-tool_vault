{{!
    @template tool_vault/remote_backup_details_details

    Example context (json):
    {
        "sectionurl": "#",
        "backupkey": "ascbef1234",
        "status": "finished",
        "started": "01/01/2000",
        "info": {
            "wwwroot": "http://localhost"
        },
        "showdetails": 0,
        "isfinished": 1,
        "viewurl": "#",
        "restoreurl": "#"
    }

}}
{{#showdetails}}
    <a href="{{sectionurl}}">Back to site restore</a>
{{/showdetails}}

<p>Backup: {{backupkey}} - {{status}} - {{started}} - {{info.wwwroot}} </p>
{{#showdetails}}
    <pre>
        {{{details}}}
    </pre>
{{/showdetails}}
<p>
    {{^showdetails}}
        <a href="{{viewurl}}" class="btn btn-secondary">View more details</a>
    {{/showdetails}}
    {{#isfinished}}
        <a href="{{restoreurl}}" class="btn btn-secondary {{^restoreallowed}}disabled{{/restoreallowed}}">Restore this backup</a>
    {{/isfinished}}
</p>