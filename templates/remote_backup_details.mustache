{{!
    @template tool_vault/remote_backup_details

    Example context (json):
    {
        "sectionurl": "#",
        "backupkey": "ascbef1234",
        "status": "finished",
        "started": "01/01/2000",
        "info": {
            "wwwroot": "http://localhost"
        },
        "showdetails": 0,
        "isfinished": 1,
        "viewurl": "#",
        "restoreurl": "#"
    }

}}
{{#showdetails}}
    <p><a href="{{sectionurl}}">Back to site restore</a></p>
{{/showdetails}}

<h4>Remote backup {{backupkey}}</h4>

<table class="generaltable">
    <tr>
        <th>Description</th>
        <td>{{info.description}}</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>{{status}}</td>
    </tr>
    {{#metadata}}
        <tr>
            <th>{{name}}</th>
            <td>{{{value}}}</td>
        </tr>
    {{/metadata}}
</table>

{{#lastdryrun}}
    <h4>Restore pre-checks</h4>
    <h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>

    {{#inprogress}}
        <p class="mt-3 mb-3">... Wait for cron to finish to view report ...</p>
    {{/inprogress}}

    {{#errormessage}}
        {{> tool_vault/error_with_backtrace }}
    {{/errormessage}}

    {{#logs}}
        <div class="card mt-2">
            <div class="card-body">
                <div class="card-text">
                    <pre>{{{logs}}}</pre>
                </div>
            </div>
        </div>

    {{/logs}}

    {{#prechecks}}
        {{> tool_vault/check_summary}}
    {{/prechecks}}

{{/lastdryrun}}

{{#isfinished}}
{{#restorenotallowedreason}}
    <div class="mt-2">
        {{> core/notification_error}}
    </div>
{{/restorenotallowedreason}}
{{/isfinished}}

<div>
    {{#showactions}}
        {{> tool_vault/remote_backup_buttons}}
    {{/showactions}}
</div>
