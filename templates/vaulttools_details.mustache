{{!
    @template tool_vault/vaulttools_details

    Logs about one tool execution

    Example context (json):
    {
        "haslogs": true,
        "logs": "Some text"
    }
}}
<h3>{{#str}} tools, tool_vault {{/str}}</h3>
<h4>{{{title}}}</h4>
{{#subtitle}}
<h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>
{{/subtitle}}

{{#inprogress}}
    <p class="mt-3 mb-3">{{#str}} waitforcron, tool_vault {{/str}}</p>
{{/inprogress}}

{{#errormessage}}
    {{> tool_vault/error_with_backtrace }}
{{/errormessage}}

{{#haslogs}}
    <div class="card mt-2 mb-2">
        <div class="card-body">
            <div class="card-text">
                <pre>{{{logs}}}</pre>
            </div>
        </div>
    </div>
{{/haslogs}}
