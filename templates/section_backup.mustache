{{!
    @template tool_vault/section_backup

    Example context (json):
    {
        "lastbackup": {
            "title": "Title",
            "details": "Details"
        }
    }

}}

<h3>{{#str}}sitebackup, tool_vault{{/str}}</h3>

{{{registrationform}}}

{{#lastoperation}}
    {{> tool_vault/last_operation }}
{{/lastoperation}}

<div class="pt-2 pb-3">
    <form action="#" data-url="{{startbackupurl}}" method="POST" data-action="startbackup">
        <input type="hidden" name="passphrase" value="">
        <input type="hidden" name="description" value="{{defaultbackupdescription}}">
        <input type="submit" value="{{#str}}startbackup, tool_vault{{/str}}" class="btn btn-primary" {{^canstartbackup}}disabled{{/canstartbackup}}>
    </form>
</div>

{{#haspastbackups}}
    <h3>Past backups on this site</h3>
    <table class="generaltable">
        <tr>
            <th>Backup</th>
            <th>Status</th>
            <th>Date</th>
            <th>Encrypted</th>
            <th></th>
        </tr>
        {{#backups}}
            <tr>
                <td>
                    {{{description}}}<br>
                    <b>Backup key:</b> <a href="{{detailsurl}}">{{backupkey}}</a>
                </td>
                <td>{{status}}</td>
                <td>{{started}}</td>
                <td>
                    {{#encrypted}}{{#str}}yes{{/str}}{{/encrypted}}
                    {{^encrypted}}{{#str}}no{{/str}}{{/encrypted}}
                </td>
                <td>
                    {{#showactions}}
                        {{> tool_vault/remote_backup_buttons}}
                    {{/showactions}}
                </td>
            </tr>
        {{/backups}}
    </table>
{{/haspastbackups}}
{{^haspastbackups}}
    <p>You don't have any past backups</p>
{{/haspastbackups}}

{{#js}}
    require(['tool_vault/vault'], function(Vault) {
        Vault.initStartBackup();
    });
{{/js}}
