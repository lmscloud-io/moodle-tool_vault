{{!
    @template tool_vault/section_backup

    Example context (json):
    {
        "lastbackup": {
            "title": "Title",
            "details": "Details"
        }
    }

}}

<h3>{{#str}}sitebackup, tool_vault{{/str}}</h3>

{{{registrationform}}}

{{#lastbackup}}
    <div class="card mt-2">
        <div class="card-header">
            <h5 class="mb-0">
                {{{title}}}
            </h5>
        </div>
        <div class="card-body">
            {{#subtitle}}
                <h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>
            {{/subtitle}}
            <p class="card-text">
                {{{summary}}}
            </p>
            <pre>
{{{logs}}}</pre>
            {{#showdetailslink}}
                <a href="{{fullreporturl}}" class="card-link">More details</a>
            {{/showdetailslink}}
        </div>
    </div>
{{/lastbackup}}

{{#canstartbackup}}
    <div class="pt-2">
        <form action="#" data-url="{{startbackupurl}}" method="POST" data-action="startbackup">
            <input type="hidden" name="passphrase" value="">
            <input type="hidden" name="description" value="{{defaultbackupdescription}}">
            <input type="submit" value="{{#str}}startbackup, tool_vault{{/str}}" class="btn btn-secondary">
        </form>
    </div>
{{/canstartbackup}}

{{#js}}
    require(['tool_vault/vault'], function(Vault) {
        Vault.initStartBackup();
    });
{{/js}}
