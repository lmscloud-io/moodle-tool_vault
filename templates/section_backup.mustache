{{!
    @template tool_vault/section_backup

    Example context (json):
    {
        "lastbackup": {
            "title": "Title",
            "details": "Details"
        },
        "apikey": "abcdef"
    }

}}

<h3>{{#str}}sitebackup, tool_vault{{/str}}</h3>

{{#apikey}}
    Your API key: {{apikey}}
{{/apikey}}
{{^apikey}}
    {{{apikeyform}}}
{{/apikey}}

{{#lastbackup}}
    <div class="card mt-2">
        <div class="card-header">
            <h5 class="mb-0">
                {{{title}}}
            </h5>
        </div>
        <div class="card-body">
            {{#subtitle}}
                <h6 class="card-subtitle mb-2 text-muted">{{{subtitle}}}</h6>
            {{/subtitle}}
            <p class="card-text">
                {{{summary}}}
            </p>
            <pre>
{{{logs}}}</pre>
            {{#showdetailslink}}
                <a href="{{fullreporturl}}" class="card-link">More details</a>
            {{/showdetailslink}}
        </div>
    </div>
{{/lastbackup}}

{{#canstartbackup}}
    <p class="pt-2">
        <a href="{{startbackupurl}}" class="btn btn-secondary">Start backup</a>
    </p>
{{/canstartbackup}}
